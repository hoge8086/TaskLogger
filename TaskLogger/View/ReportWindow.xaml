<Window x:Class="TaskLogger.View.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskLogger.View"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="ReportWindow" Height="300" Width="300">
    <Window.Resources>
        <Style x:Key="textCenter" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="notFocusable" TargetType="{x:Type DataGridCell}"> 
            <Setter Property="Focusable" Value="False"/> 
        </Style>
        <x:Array x:Key="dateType" Type="{x:Type sys:String}">
            <sys:String>日付</sys:String>
            <sys:String>期間</sys:String>
            <sys:String>全期間</sys:String>
        </x:Array>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="レポート期間："/>
            <ComboBox x:Name="peridoComb" Width="70" ItemsSource="{StaticResource dateType}" SelectedIndex="0" HorizontalContentAlignment="Center" />
            <DatePicker Text="{Binding Start, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" BorderBrush="Transparent">
                <DatePicker.Style>
                    <Style TargetType="{x:Type DatePicker}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=peridoComb, Path=SelectedIndex}" Value="2">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DatePicker.Style>
            </DatePicker>
            <StackPanel Orientation="Horizontal">
                <StackPanel.Style>
                    <Style TargetType="{x:Type StackPanel}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=peridoComb, Path=SelectedIndex}" Value="1">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <TextBlock Text="～" VerticalAlignment="Center"/>
                <DatePicker Text="{Binding Start, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" BorderBrush="Transparent"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5,0,5,5">
            <TextBlock Text="出力タスク："/>
            <ComboBox  SelectedIndex="0" HorizontalContentAlignment="Center">
                <ComboBox.ItemsSource>
                <x:Array Type="{x:Type sys:String}">
                    <sys:String>全てのタスク</sys:String>
                    <sys:String>指定</sys:String>
                </x:Array>
                </ComboBox.ItemsSource>
            </ComboBox>
        </StackPanel>
        <DataGrid ItemsSource="{Binding TaskLogs}"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            VerticalGridLinesBrush="Gray"
            HorizontalGridLinesBrush="Gray"
            SelectionUnit="Cell"
            HeadersVisibility="Column"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center">
            <DataGrid.Columns>
                <DataGridTemplateColumn IsReadOnly="True" Header="タスク名"  Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox IsEditable="True" Text="{Binding TaskName, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                      HorizontalAlignment="Stretch"
                                      BorderThickness="0"
                                      BorderBrush="Transparent"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding DownTimeMinutes, Mode=TwoWay}" ElementStyle="{StaticResource textCenter}" Header="検索方法"  Width="60"/>
                <DataGridTextColumn Binding="{Binding WorkingMinutes}" ElementStyle="{StaticResource textCenter}" CellStyle="{StaticResource notFocusable}" Header="時間"  Width="60" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="出力" HorizontalAlignment="Right" Padding="15,0,15,0" Margin="5"/>
    </StackPanel>
</Window>
